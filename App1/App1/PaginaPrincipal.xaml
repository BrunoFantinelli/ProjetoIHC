<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.PaginaPrincipal">
  <!--Pages can be added as references or inline-->
    
    <!--Tela de Compras-->  
    <ContentPage Title="Compras" >
        <StackLayout>
            <Label Text="Tela Compras"  HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />
            <Button Text="Adicionar Item"  HorizontalOptions="FillAndExpand" Clicked="MudarTelaNovoItem"/>
        </StackLayout>
    </ContentPage>


    <!--Tela do Calendário-->
    <ContentPage Title="Calendário">
        <StackLayout>
            <Label Text="Tela Compras"  HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />
        </StackLayout>
    </ContentPage>


    <!--Tela de Dicas-->
    <ContentPage Title="Dicas">
        <StackLayout>
            <Label Text="Tela Compras"  HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />
        </StackLayout>
    </ContentPage>
</TabbedPage>